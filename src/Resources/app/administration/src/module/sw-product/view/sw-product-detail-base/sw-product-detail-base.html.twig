{% block sw_product_detail_base_media_card %}
    {% parent %}
    <sw-card :isLoading="isLoading" title="Attachments">
        <sw-media-list-selection-v2
            :entityMediaItems="attachmentCollection"
            :entity="attachmentRepository"
            uploadTag="attachment"
            :defaultFolderName="defaultFolderName"
            @open-sidebar="onOpenMediaModal"
            @upload-finish="successfulUploadAttachment"
            @item-remove="onRemoveItem"
        >
        </sw-media-list-selection-v2>

        <sw-media-modal-v2
            variant="regular"
            :allowMultiSelect="true"
            :initialFolderId="defaultMediaFolderId"
            v-if="mediaModalOpen"
            @media-upload-remove-image="onRemoveItem"
            @media-modal-selection-change="onMediaSelectionChange"
            @modal-close="onCloseMediaModal">
        </sw-media-modal-v2>

    </sw-card>
{% endblock %}
