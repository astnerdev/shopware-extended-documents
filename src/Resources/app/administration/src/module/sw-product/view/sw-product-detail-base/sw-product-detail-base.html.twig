{% block sw_product_detail_base_media_card %}
    {% parent %}
    <sw-card :isLoading="isLoading" title="Attachments">
        <sw-media-list-selection-v2
            :entityMediaItems="attachmentCollection"
            :entity="attachmentEntity"

            uploadTag="attachment"
            @open-sidebar="onOpenAttachmentMediaSidebar"
            @upload-finish="successfulUploadAttachment"
            defaultFolderName="document"
            @item-remove="onRemoveItem"
            @item-drop="onRemoveItem"
        >
        </sw-media-list-selection-v2>
    </sw-card>
{% endblock %}
